<style>
    .jumbotron {
        background-image: linear-gradient(to bottom, rgba(214, 213, 202, 1.0),rgba(63, 58, 64, 1.0));      
        background-size: cover;
        height: 250px;
    }
</style>
 <!-- linear-gradient(to bottom, rgba(245, 246, 252, 0.52), rgba(117, 19, 93, 0.73))--> 

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-3 text-white text-bold text-center ">Find Artists</h1>
     
    </div>
</div>


<div class="container">

    <h2 class="page-header">Find Artists</h2>

    <%= form_tag artists_path, method: "get", html: { class: "form" } do %>
        <div class="form-group col-md-4">
            <%= text_field_tag(:artist_name, "", placeholder: "Enter artist name", class: "form-control") %>
        </div>
        <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>

</div>