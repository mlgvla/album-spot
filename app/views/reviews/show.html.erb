<div class="container mt-4">
    <h3>   
    
        <%= @user_album.album.name %><br>
        <%= @user_album.album.artist.name %>
        <% if @user_album.favorite %>
            <i class="fas fa-crown"  style="color:purple;"></i>
        <% end %>
    </h3>
    <br><br>
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h3><%= @review.title %></h3>
                        created <%= @review.created_at.strftime('%m-%e-%y at %H:%M') %>, by <%= @user_album.user.username %>
                        <br><br> 
    
                        <%= render partial: "stars", locals: { stars: @review.stars } %>
                        <!-- The album show index page should show average star rating -->
                        <br><br>

                        <p><%= @review.content %></p>
                </div>
            </div>
        </div>
    </div>

    
    <%= link_to 'View Reviews', album_reviews_path(@user_album.album), class: "btn btn-primary", type: "button" %>

</div>


