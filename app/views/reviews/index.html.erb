
<div class="container">
    <h1 class="mb-5">Reviews for <%= link_to @album.name, album_path(@album) %> </h1>
    <div class="row">
        <% @reviews.each do |review| %>        
            <div class="col-md-8">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><%= review.title %></h5>
                        <p class="card-text">by <%= review.user_album.user.username %><br>
                            <%= render partial: "stars", locals: { stars: review.stars } %>
                        </p>
                        <p><%= truncate(review.content, length: 60, separator: ' ') %></p>
                        <%= link_to 'Read Review', review_path(review) %>                       
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
